<section class='section alt' id='promo'>
  <div class='container'>
    <div class='carousel slide' id='myCarousel'>
      <!-- Carousel items -->
      <div class='carousel-inner'>
        <% promos.each_with_index do |promo, i| %>
          <div class='<%= 'active' if i == 0 %> item'>
            <div class='row-fluid'>
              <div class='<%= "span7" if promo.image %>'>
                <div class='hero-unit <%= 'pull-center' unless promo.image %>'>
                  <h1><%= promo.heading %></h1>
                  <p><%= promo.strapline %></p>
                  <a class="btn btn-primary btn-large" href="details">Find out more</a>
                </div>
              </div>
              <% if promo.image %>
                <div class='span5'>
                  <img alt='<%= promo.image.alt_text %>' class='pull-right' src='<%= promo.image.url %>' />
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <!-- Carousel nav -->
      <a class='carousel-control left' data-slide='prev' href='#myCarousel'>&lsaquo;</a>
      <a class='carousel-control right' data-slide='next' href='#myCarousel'>&rsaquo;</a>
    </div>
    <div class="row-fluid">
    </div>
  </div>
</section>

